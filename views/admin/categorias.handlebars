<h2>Lista de categorias</h2>
<hr>
<a href="/admin/categorias/add"><button class="btn btn-success">Nova categoria</button></a>

{{#each categorias}}
    <div class="card">
        <div class="card-body">
            <h4>{{nome}}</h4>
            <small>Slug {{slug}}</small><br>
            <small>Data de criação: {{date}}</small>
            <a href="/admin/categorias/edit/{{ id}}"><button class="btn btn-seccess mt-4">Editar Categoria</button></a>  <!-- Esse id é o id especifico da categoria -->
            <form action="/admin/categorias/deletar" method="POST">
                <input type="hidden" name="id" value="{{_id}}">
                <button type="submit" class="btn btn-danger mt-2">Deletar Categoria</button>
            </form>
        </div>
    </div>
{{else}}
    <h4 class="mt-5">Nenhuma categoria registrada</h4>
{{/each}}